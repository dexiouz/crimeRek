<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Register culprit</title>

    <!-- Bootstrap core CSS -->
    <link href="/lib/css/bootstrap.min.css" rel="stylesheet">
      <!-- Custom styles for this template -->
    <link href="/signin_signup.css" rel="stylesheet">  
    <link rel="stylesheet" href="/index.css">
  </head>


  <body>
     <nav  class="navbar navbar-expand-lg navbar-light bg-light reg_navbar">
          <div class="container-fluid">
            <div class="navbar-header"> 
              <a href="/" class="navbar-brand">NDLEA</a>
            </div>
            <div class="d-flex justify-content-end collapse navbar-collapse ">
              <ul class="nav navbar-nav">
                <li class="nav-item"><a class="nav-link" href="/signin">Login</a></li>
              </ul>
            </div>
          </div>
      </nav>

<div class="reg_form-custom">
    <form action="/signin" method="GET" class="form-signin">
      <h1 class="h3 mb-3 font-weight-normal text-center">Please sign up here</h1>
      <div class="form-group">
          <label for="inputPassword" >Full Name</label>
          <input type="text" id="fullName" class="form-control"  placeholder="Full Name" required autofocus name="fullName">
        </div>
      <div class="form-group">
          <label for="inputPassword" >Email</label>
        <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus name="email">
      </div>
      <div class="form-group">
        <label for="inputPassword" >Password</label>
        <input type="password" id="inputPassword" class="form-control" placeholder="Password" required name="password">
      </div>
      <div class="form-group">
        <label for="comfirmPassword" >Comfirm Password</label>
        <input type="password" id="comfirmPassword" class="form-control" placeholder="Comfirm Password" required name="comfirmPassword">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block btn_custom" type="submit">Sign up</button>
      </div>
    </form>
  </div>    
</body>

</html>